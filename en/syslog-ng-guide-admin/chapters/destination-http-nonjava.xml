                <primary>ca-file()</primary>
            </indexterm>
            <indexterm>
                <primary>ca_file()</primary>
            </indexterm>
            <informaltable frame="topbot" colsep="0" rowsep="0">
                <tgroup cols="2">
                    <colspec colnum="1" colwidth="80pt"/>
                    <tbody>
